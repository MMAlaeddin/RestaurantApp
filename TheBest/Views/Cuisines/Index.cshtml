@{
  Layout = "_Layout";
}

@using TheBest.Models;
@model List<TheBest.Models.Cuisine>;

<h1>Cuisine Types</h1>

@if(@Model.Count == 0)
{
  <h3>No cuisines have been added yet! Sorry :/</h3>
}

@foreach (Cuisine cuisine in Model)
{
  <li>@Html.ActionLink($"{cuisine.Style}", "Details", new { id = cuisine.CuisineId })</li>
}

<p>@Html.ActionLink("Add new cuisine", "Create", "Cuisines")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
